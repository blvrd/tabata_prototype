<div class="container">
  <%= link_to "New Workout", new_workout_url, class: 'btn btn-primary' %>
  <%= link_to "Progress", user_path(session[:user_id]) %>
  <%= link_to "Log out", "/logout", class: 'btn' %>
  <div class="row">
    <% if @user.workouts %>
      <% @user.workouts.each do |workout| %>
	<div class="jumbotron">
	  <div><%= workout.exercise %>: <%= workout.total_reps %></div>
	  <div>Date: <%= workout.created_at.strftime("%d %b. %Y") %></div>
	</div>
      <% end %>
    <% else %>
      <h1>No workouts</h1>
    <% end %>
  </div>
</div>
