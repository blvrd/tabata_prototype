<h1>Create your account</h1>

<%= form_for @user do |f| %>
  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="">
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  </div>

  <div class="">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="">
    <%= f.label :password_confirmation, "Confirm your password" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="">
    <%= f.submit "Create User" %>
  </div>
<% end %>
